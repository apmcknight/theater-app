@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div style="display: block; width: 150%; height: 100%; margin-top: 5%; margin-bottom: 10%; margin-left: 35%; margin-right: 35%;">


    <div class="row">
        <div class="col-md-4">
            <section class="card" style="background:#e9e9e9; padding-top: 30px; padding-bottom: 30px; padding-left: 30px; padding-right: 30px;">
                <h1>@ViewData["Title"]</h1>

                <form id="account" method="post">
                    <h4>To sign in, please enter your User ID and Password</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">User ID</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            Please contact the IT Department if you are locked out of your account.
                        </p>
                      
                    </div>
                </form>
            </section>
        </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
