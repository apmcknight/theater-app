@page
@model TheaterApp.Employee.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="custom-margin-wrapper">
    <h1>Add a New Customer</h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Customers</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add a Customer</li>
        </ol>
    </nav>

    <hr />

    <div class="card" style="background: #e9e9e9; width: 90%; height: auto; padding-top: 20px; padding-bottom: 20px; padding-left: 60px; padding-right: 60px; margin-left: auto; margin-right: auto;">
        <div class="row">
            
            <form method="post">

                <h3 style="margin-bottom: 40px;">Fill out the details below to add a new customer.</h3>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div style="margin-left: 5px;" class="row">
                    <div style="margin-right: 10px;" class="form-group">
                        <label asp-for="Customer.FirstName" class="control-label">First Name (Required)</label>
                        <input asp-for="Customer.FirstName" class="form-control" />
                        <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.LastName" class="control-label">Last Name (Required)</label>
                        <input asp-for="Customer.LastName" class="form-control" />
                        <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="Customer.EMailAddress" class="control-label">Customer E-Mail Address</label>
                    <input asp-for="Customer.EMailAddress" class="form-control" />
                    <span asp-validation-for="Customer.EMailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.MailingAddress" class="control-label">Street Address</label>
                    <input asp-for="Customer.MailingAddress" class="form-control" />
                    <span asp-validation-for="Customer.MailingAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.City" class="control-label">City</label>
                    <input asp-for="Customer.City" class="form-control" />
                    <span asp-validation-for="Customer.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.State" class="control-label">State</label>
                    <input asp-for="Customer.State" class="form-control" />
                    <span asp-validation-for="Customer.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.PhoneNumber" class="control-label">Phone Number (Required)</label>
                    <input asp-for="Customer.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.SeatingPreference" class="control-label">Seating Preference</label>
                    <input asp-for="Customer.SeatingPreference" class="form-control" />
                    <span asp-validation-for="Customer.SeatingPreference" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Customer.IsSeasonTicketHolder" />
                        Click if this customer is becoming a seasion ticket holder.
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Customer.HasFoodAlergey" />
                        Click if this customer has a food alergey.
                    </label>
                </div>

                <!-- Conditionally render this section if the food alergey check mark is checked -->

                <div class="form-group">
                    <label asp-for="Customer.FoodAlergey" class="control-label">What's the customers food Alergey</label>
                    <input asp-for="Customer.FoodAlergey" class="form-control" />
                    <span asp-validation-for="Customer.FoodAlergey" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.EmergencyContactFullName" class="control-label">Emergency Contact Full Name</label>
                    <input asp-for="Customer.EmergencyContactFullName" class="form-control" />
                    <span asp-validation-for="Customer.EmergencyContactFullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.EmergencyContactPhone" class="control-label">Emergency Contact Phone Number</label>
                    <input asp-for="Customer.EmergencyContactPhone" class="form-control" />
                    <span asp-validation-for="Customer.EmergencyContactPhone" class="text-danger"></span>
                </div>




                <!-- end of section  -->

                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">
                        <i style="width: 3%; margin-right: 25px;" class="right fas fa-plus-circle"></i>
                        Create Customer
                    </button>
                </div>
                <a class="btn btn-secondary" asp-page="Index"> <i style="width: 3%; margin-right: 25px;" class="right fas fa-arrow-left"></i>Back to Customers</a>
            </form>
            
        </div>
    </div>

       
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
