@page
@model TheaterApp.Employee.Pages.Customers.IndexModel

@{ ViewData["Title"] = "Index"; }



<div class="custom-margin-wrapper">
    <h1>Customers</h1>

    <a style="margin-top: 10px; margin-bottom: 10px;" class="btn btn-primary" asp-page="/customers/create">
        <i style="width: 3%; margin-right: 15px;" class="right fas fa-plus"></i>
        Add a New Customer
    </a>
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    E-Mail Address
                </th>
                <th>
                   Mailing Address
                </th>
              
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EMailAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MailingAddress)
    </td>
   
    <td>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ID"> <i style="width: 3%; margin-right: 25px;" class="right fas fa-edit"></i>Edit</a>
        <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.ID"> <i style="width: 3%; margin-right: 25px;" class="right fas fa-info-circle"></i>Details</a>
        <a class="btn btn-warning" asp-page="./Delete" asp-route-id="@item.ID"> <i style="width: 3%; margin-right: 25px;" class="right fas fa-trash"></i>Delete</a>
    </td>
</tr>}
        </tbody>
    </table>
</div>
